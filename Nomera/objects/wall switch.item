'#wall switch

type ITEM_DATA
    as integer state
end type

parameter "state", integer
publish slot "interact", $interact, Rectangle2D(Vector2D(8,8), Vector2D(24, 24))
signal $turnOn
signal $turnOff
signal $toggle

function _init()
 
    
    data.state = 0

    getParameter(data.state, "state")
    
    CREATE_ANIMS(1)
    anims[0].load(MEDIA_PATH + "wallswitch.txt")
    anims[0].play()
    
end function

'---------------------------------

function _flush()

end function

'---------------------------------

function _draw(scnbuff as integer ptr)
    PREP_LIT_ANIMATION()
    
    DRAW_LIT_ANIMATION(0, p.x, p.y, 0, 0 )

end function

'----------------------------------

function _drawOverlay(scnbuff as integer ptr)
  
end function

'----------------------------------

function _run(t as double)
    if data.state = 0 then
        anims[0].hardSwitch(0)
    else
        anims[0].hardSwitch(1)
    end if
    
end function

'-----------------------------------
slot $interact()
    
    data.state = 1 - data.state
    throw($toggle)
    if data.state = 1 then
        throw($turnOn)
            'play sound
    else
        throw($turnOff)
            'play sound
    end if
end slot


