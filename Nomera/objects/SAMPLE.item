function _run()
    'added to process

    '''''' demonstration of throwing signals ''''''''
    throw($reachedTop("timeTaken = 20"))
    
    queryTargets(slotSet, "SHOCK TARGET", Circle2D(Vector2D(p.x, p.y), 10))
    querySlots(slotSet, "FRY ELECTRONICS")
    queryValues(valueSet, "CURRENT POSITION")
    
    slotSet.throw("severity = 10")
    
    value = getValue(Parameter("TUBE A ID"), "CURRENT POSITION")  
    ''''''''''''''''''''''''''''''''''''''''''''''''

    'return 0 to keep, 1 to destroy
end function

